<Window x:Class="DataBindingExtraUppgifter.Övning2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingExtraUppgifter"
        mc:Ignorable="d"
        Title="Övning2" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding StreetAddress,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Width="200" Margin="10" />
            <TextBox Text="{Binding ZipCode,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="200" Margin="10" />
            <Label Content="{Binding FullAddress}" Width="200" Margin="10" />
        </StackPanel>

    </Grid>
</Window>
